import os
from dataclasses import dataclass

@dataclass
class Pessoa:
    nome:str
    sobrenome:str
    idade:int
    altura:float
    peso:float

# Definindo listas vazias para armazenar os dados dos usuários
nomes = []
idades = []
alturas = []
pesos = []
sobrenomes = []
lista_imc = []
lista_total = []

# Função sem retorno.
def logoSenai():
    os.system("cls || clear")
    print("=== SENAI === ")


# Solicitando os dados dos usuários em um loop
while True:
    logoSenai()
    pessoa = Pessoa(
    nome = input("Digite o nome do usuário: "),
    sobrenome = input("Digite seu sobrenome: "),
    idade = int(input("Digite a idade do usuário: ")),
    altura = float(input("Digite a altura do usuário (em metros): ")),
    peso = float(input("Digite o peso do usuário (em quilogramas): "))
    )
    # Adicionando os dados às listas
    lista_total.append(pessoa)
    nomes.append(pessoa.nome)
    idades.append(pessoa.idade)
    alturas.append(pessoa.altura)
    pesos.append(pessoa.peso)
    sobrenomes.append(pessoa.sobrenome)
    
    # Verificando se o usuário quer sair
    opcao = int(input("""Digite a opção desejada:
1 - Adicionar mais um usuário
2 - Sair do sistema """))
    match opcao:
        case 1:
            print()
        case 2:
            break
    

#Funções com retorno
def calculo_imc(a,b):
    for numero1 in a:
        peso = numero1
    for numero2 in b:
        altura = numero2
        altura_final = altura * altura
    imc = peso / altura_final
    return imc


imc = calculo_imc(pesos, alturas)
lista_imc.append(imc)

def interpretando_imc(a):
    for numero in a:
        if numero < 18.5:
            print("Abaixo do peso")
        elif numero >= 18.5 and numero < 25:
            print("Peso normal")
        elif numero >= 25 and numero < 30:
            print("Sobrepeso")
        elif numero >= 30 and numero < 35:
            print("Obesidade grau I")
        elif numero >=35 and numero < 40:
            print("Obesidade grau II")
        elif numero >= 40:
            print("Obesidade grau III")

interpretando_imc(lista_imc)



# Exibindo os dados armazenados
logoSenai()
print("\nDados dos usuários:")
for i in range(len(nomes)):
    print(f"Usuário {i+1}:")
    print("Nome:", nomes[i], sobrenomes[i])
    print("Idade:", idades[i], "anos")
    print("Altura:", alturas[i], "metros")
    print("Peso:", pesos[i], "quilogramas")
    print(f"IMC: {imc:.2f}")
    interpretando_imc(lista_imc)
    
